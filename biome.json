{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!!**/target",
			"!!**/node_modules",
			"!!**/dist",
			"!!**/build",
			"!!**/.svelte-kit",
			"!!**/.svelte",
			"!!**/.vscode",
			"!!**/.idea",
			"!!**/.git",
			"!!**/.hg",
			"!!**/.svn"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUselessElse": "off"
			},
			"complexity": {
				"useOptionalChain": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
